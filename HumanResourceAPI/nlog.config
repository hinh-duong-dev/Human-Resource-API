<?xml version="1.0" encoding="utf-8" ?>
<nlog
  xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  autoReload="true"
  internalLogLevel="Trace"
  internalLogFile="D:\Source\AzureDevOps\HumanResourceAPI\HumanResourceAPI\internal_logs\internallog.txt">

  <targets>
    <target
       name="logfile" xsi:type="File"
       fileName="D:\Source\AzureDevOps\HumanResourceAPI\HumanResourceAPI\logs\${shortdate}_logfile.txt"
       layout="${longdate}|${level:uppercase=true}|${logger}|${message}" />
  </targets>
  <rules>
    <logger name="*" minlevel="Debug" writeTo="logfile" />
  </rules>
</nlog>